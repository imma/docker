#!/usr/bin/env bash

function docker_package_install {
  source /etc/lsb-release

  sudo -E aptitude install -y docker.io
}

function bootstrap {
  local shome="$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"
  source "$shome/script/profile"

  case "$(uname -s)" in
    Darwin)
      block compile pkg \
        'https://github.com/docker/toolbox/releases/download/v1.12.3/DockerToolbox-1.12.3.pkg'
      ;;
    Linux)
      docker_package_install
      ;;
  esac
}

bootstrap
