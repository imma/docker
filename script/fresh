#!/usr/bin/env bash

function main {
  local shome="$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"
  source "$shome/script/profile"

  if [[ -n "${NOSUDO:-}" ]]; then
    return 0
  fi

  if ! type -P docker >/dev/null; then
    return 1
  fi

  case "${DISTRIB_ID}" in
    Darwin) return 0 ;;
  esac

  return 0
}

source sub "$BASH_SOURCE" "$@"
