#!/usr/bin/env bash

function version {
  local shome="$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"
  source "$shome/script/profile"

  local ver_docker="$(docker --version 2>/dev/null | awk 'NR == 1 {print $3}' | perl -pe 's{,$}{};s{-ce}{~ce}' || true)"
  jq -n \
    --arg docker "$ver_docker" \
    '{docker: $docker}'
}

version "$@"
